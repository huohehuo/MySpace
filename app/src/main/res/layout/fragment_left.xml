<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eceae1"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_menu_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="20dp">

        <include layout="@layout/item_personal" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_menu_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <RelativeLayout
            android:id="@+id/ll_left_set"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_thr_ud"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_toRightOf="@+id/tv_add"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/list"
                android:layout_gravity="center_horizontal"
                 />
            <TextView
                android:id="@+id/tv_btn_thr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/btn_thr_ud"
                android:layout_margin="3dp"
                android:textSize="20sp"
                android:text="添加文字包"/>
            <Button
                android:id="@+id/btn_left_data"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:background="@drawable/calendar"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/tv_btn_left_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/btn_left_data"
                android:layout_margin="3dp"
                android:textSize="20sp"
                android:text="管理"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#e3e1d7"
            android:layout_below="@+id/ll_left_set" />

    </RelativeLayout>
</LinearLayout>
