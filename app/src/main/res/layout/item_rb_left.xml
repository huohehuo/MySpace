<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txt_time_left"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="时间。。。" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_leftname"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/ic_launcher"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            />

        <LinearLayout
            android:id="@+id/ll_left"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/iv_leftname"
            android:layout_toEndOf="@+id/iv_leftname">
        <TextView
            android:id="@+id/txt_lefttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/bg_edittext_normal"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_leftname"
            android:layout_marginLeft="9dp"
            android:text="这是我说的话：：：：：：：："
  />
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/iv_rb_image"
           android:src="@drawable/user2"
           android:layout_toRightOf="@+id/iv_leftname"
           android:layout_margin="9dp"
           android:layout_below="@+id/txt_lefttxt"
           android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
