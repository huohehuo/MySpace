<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#666666"
    tools:context=".ui.LoginActivity">



    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_above="@+id/ll_login"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:background="#444444">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/et_pwd"
            android:hint="请输入帐号"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/bt_login"
            android:hint="请输入密码"
            android:textAlignment="center" />

        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="登录" />
        <CheckBox
            android:id="@+id/cb_remeber"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bt_login" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cb_remeber"
            android:layout_toEndOf="@+id/cb_remeber"
            android:layout_toRightOf="@+id/cb_remeber"
            android:text="记住密码" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_register"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_above="@+id/ll_login"
        android:layout_centerHorizontal="true"

        android:background="#444444">
    <EditText
        android:id="@+id/et_name_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/et_pwd_register"
        android:hint="请输入帐号"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/et_pwd_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/bt_register"
        android:hint="请输入密码"
        android:textAlignment="center" />

    <Button
        android:id="@+id/bt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="注册" />

</RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_regster"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>
</RelativeLayout>
