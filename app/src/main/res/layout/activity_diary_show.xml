<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <lins.com.myspace.view.ActionBarView
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@+id/include1">

        <TextView
            android:id="@+id/tv_show_title"
            android:layout_width="match_parent"
            android:layout_height="59sp"
            android:background="@drawable/bg_edittext"
            android:gravity="center_horizontal|center_vertical"
            android:padding="10dp"
            android:singleLine="true"
            android:text="请输入标题" />
        <TextView
            android:id="@+id/tv_show_belong"
            android:layout_width="wrap_content"
            android:layout_height="18sp"
            android:text=" @文字包"
            android:layout_below="@+id/tv_show_title"
            android:layout_alignParentLeft="true"
           />
        <TextView
            android:id="@+id/tv_show_time"
            android:layout_width="wrap_content"
            android:layout_height="18sp"
            android:text="201201010"
            android:layout_below="@+id/tv_show_title"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_show_time"
            android:id="@+id/scrollView">

            <TextView
                android:id="@+id/tv_show_diary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext"
                android:gravity="top"
                android:text="正文"
                android:padding="15dp" />
        </ScrollView>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_show_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="5dp"
        android:layout_below="@+id/include1">

        <EditText
            android:id="@+id/ed_show_title"
            android:layout_width="match_parent"
            android:layout_height="59sp"
            android:background="@drawable/bg_edittext"
            android:gravity="center_horizontal|center_vertical"
            android:padding="10dp"
            android:singleLine="true"
            android:text="请输入标题" />
        <TextView
            android:id="@+id/ed_show_belong"
            android:layout_width="wrap_content"
            android:layout_height="18sp"
            android:text=" @文字包"
            android:layout_below="@+id/ed_show_title"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/ed_show_time"
            android:layout_width="wrap_content"
            android:layout_height="18sp"
            android:text="201201010"
            android:layout_below="@+id/ed_show_title"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ed_show_time">

            <EditText
                android:id="@+id/ed_show_diary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext"
                android:gravity="top"
                android:text="正文"
                android:padding="15dp" />
        </ScrollView>

    </RelativeLayout>
</LinearLayout>